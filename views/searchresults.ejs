<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Search Results</title>
    <link rel="stylesheet" href="/main.css" />
  </head>

  <body>
    <h1>Search Results for "<%= keyword %>"</h1>

    <% if (books.length === 0) { %>

    <p>No books found matching your search.</p>

    <% } else { %>

    <table border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Price (Â£)</th>
        </tr>
      </thead>

      <tbody>
        <% books.forEach(function(book) { %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.name %></td>
          <td><%= book.price %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <% } %>

    <p><a href="/books/search">Back to search</a></p>
    <p><a href="/">Back to home</a></p>
  </body>
</html>
